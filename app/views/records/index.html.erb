<h1>Registros</h1>

<!-- <div class="col-md-12">
  <%= link_to t("app.new", name: "Registro"), new_record_path, class: "btn btn-sucess" %>
</div> -->

<table class="table table-striped">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Origem</th>
      <th>Tópico</th>
      <th>Parte</th>
      <th>Data do protocolo</th>
      <th>Data do registro</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.description %></td>
        <td><%= record.origin %></td>
        <td><%= record.topic %></td>
        <td><%= record.part %></td>
        <td><%= record.dataprotocol %></td>
        <td><%= record.datarecord %></td>
        <!-- <td><%= link_to 'Mostrar', record %></td> -->

        <td><%= link_to fa_icon("pencil-square-o", title: "Editar"), edit_record_path(record), class: "btn btn-info" %></td>
        <td><%= link_to fa_icon("trash-o", title: "Excluir"), record, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

